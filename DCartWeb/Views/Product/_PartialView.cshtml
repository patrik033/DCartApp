@using DCartWeb.Models.Products
@model Product

@{
    Layout = "";
}

<div class="card mb-3">
    <div class="row">
        <div class="col-12">
            
                @if (@Model.PosterImageUrl != null)
                {
                    <img id="profilePicture" class="img-fluid rounded" style="height:200px;" src="/@Model.PosterImageUrl">
                }
                else
                {
                    <img id="profilePicture" class="img-fluid rounded" style="height:200px;" src="" alt="No Image">

                }
          
        </div>
        <div class="col-12">
            <div class="card-body">
                <h5 class="card-title">Product Name: @Model.ProductName</h5>
                <p class="card-text">Date Added: @Model.DateAdded</p>
                <p class="card-text">Product Price: @Model.ProductPrice</p>
                <p class="card-text">Quantity In Stock: @Model.QuantityInStock</p>

                @if (Model.DateUpdated != null)
                {
                    <p class="card-text"><small class="text-muted">Last updated @Model.DateUpdated</small></p>
                }
                else
                {
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                }
            </div>
        </div>
    </div>
</div>