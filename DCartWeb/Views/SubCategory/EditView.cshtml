@using DCartWeb.Models.ViewModels
@model SubCategoryViewModel


<form method="post" enctype="multipart/form-data"  asp-action="Edit">
    <input asp-for="Subs.Id" hidden />
    <input asp-for="Subs.DateAdded" hidden />
    <input asp-for="Subs.DateUpdated" hidden value="@DateTime.UtcNow" />
    <input asp-for="Subs.PosterImageUrl" type="hidden" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3">
            <label asp-for="Subs.Name"></label>
            <input asp-for="Subs.Name" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Subs.MainCategory"></label>
            <select asp-for="Subs.MainCategoryId" asp-items="Model.MainCategoryItems" class="form-select">
                <option disabled selected>-Select Category-</option>
            </select>
        </div>

        <div class="col-4 col-lg-3 offset-lg-1 ">

            @if (@Model.Subs.PosterImageUrl != null)
            {
                <img id="profilePicture" class="img-fluid rounded" style="height:200px;" src="@Model.Subs.PosterImageUrl">
            }
            else
            {
                <img id="profilePicture" class="img-fluid rounded" style="height:200px;" src="" alt="No Image">

            }
        </div>

        <div class="mb-3">
            <label asp-for="Subs.PosterImageUrl"></label>
            <input asp-for="Subs.PosterImageUrl" type="file" class="form-control" value="@Model.Subs.PosterImageUrl" />
            <span asp-validation-for="Subs.PosterImageUrl" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-danger" style="width:150px">Edit</button>
        <a asp-controller="SubCategory" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>