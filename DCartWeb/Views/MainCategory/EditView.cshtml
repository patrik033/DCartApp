@using DCartWeb.Models.Products
@model MainCategory

@if (Model == null)
{
    <p>HTTP ERROR 404</p>
}
else
{

    <form method="post" enctype="multipart/form-data" asp-action="Edit">
        <input asp-for="Id" hidden />
        <input asp-for="DateAdded" hidden />
        <input asp-for=DateUpdated type="hidden" value="@DateTime.UtcNow" />
        <input asp-for="PosterImageUrl" type="hidden" />
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Edit Category</h2>
                <hr />
            </div>
            <div asp-validation-summary="All"></div>
            <div class="mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
            </div>


            <div class="col-4 col-lg-3 offset-lg-1 ">

                @if (@Model.PosterImageUrl != null)
                {
                    <img id="profilePicture" class="img-fluid rounded" style="height:200px;" src="/@Model.PosterImageUrl">
                }
                else
                {
                    <img id="profilePicture" class="img-fluid rounded" style="height:200px;" src="" alt="No Image">

                }
            </div>

            <div class="mb-3">
                <label asp-for="PosterImageUrl"></label>
                <input asp-for="PosterImageUrl" type="file" class="form-control" value="@Model.PosterImageUrl" />
            </div>
            <button type="submit" class="btn btn-danger" style="width:150px">Edit</button>
            <a asp-controller="MainCategory" asp-action="Index" class="btn btn-secondary" style="width:150px">
                Back to List
            </a>
        </div>
    </form>
}