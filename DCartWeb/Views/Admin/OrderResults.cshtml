@using DCartWeb.Models.Orders
@model List<OrderItem>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
    </div>

    <br />
    <form>
        @foreach (var item in Model)
        {
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-4">
                        @if (item.PictureUrl != null)
                        {
                            <img id="ProductPicture" style="width:350px;width:300px; object-fit:cover" src="/@item.PictureUrl">

                        }
                        else
                        {
                            <img id="ProductPicture" style="width:350px;width:300px; object-fit:cover" src="" alt="No Picture">
                        }

                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">Product Name: @item.Name</h5>
                            <p class="card-text">Product Price: @item.Price</p>
                            <p class="card-text">Quantity In Order: @item.QuantityInCart</p>
                        </div>
                    </div>
                </div>
            </div>
        }

        <br />
        <div class="row">
            <button asp-controller="Admin" asp-action="Orders" style="width:200px;" class="btn btn-secondary">Go Back To Index</button>
        </div>
        <br />
        <br />
    </form>
</div>