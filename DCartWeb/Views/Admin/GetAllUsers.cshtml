@using DCartWeb.Models.Users
@model IEnumerable<User>


@foreach (var item in Model)
{
    <form method="post">

        <table class="mt-5 table table-bordered table-striped table-hover table-responsive">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>First Name</th>
                    <th>Last name</th>
                    <th>User Name</th>
                    <th>Go Back</th>
                    <th>Select User</th>
                </tr>
            </thead>
            <tbody>
                <tr>

                    <td>@item.Id</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.UserName</td>
                    <td>
                        <button id="back" asp-controller="Admin" asp-action="Index" style="width:200px;" class="btn btn-secondary">Go Back</button>
                    </td>
                    <td>
                        <button id="continue-shopping" asp-controller="Admin" asp-action="GetSelectedUser" asp-route-id="@item.Id" style="width:200px;" class="btn btn-secondary">Select User</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </form>
}